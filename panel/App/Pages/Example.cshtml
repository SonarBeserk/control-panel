@page
@model ExampleModel
@{
    ViewData["Title"] = "Example Tools";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="container-fluid">
        <div class="card p-1">
            <div class="card-header">
                <b>Greeter Tool</b>
            </div>
            <form
                id="greetingForm"
                hx-post
                hx-controller="Example"
                hx-action="Post"
            >
                <div class="mb-3">
                    <label for="nameInput" class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="nameInput" aria-describedby="nameHelp">
                    <div id="nameHelp" class="form-text">What name should we call you?</div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="card p-1">
            <div class="card-header">
                <b>Greeter Stats</b>
            </div>
            <h2>TODO Chart</h2>
        </div>
    </div>
</div>

